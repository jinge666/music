/* pages/index/index.wxss */
.swiper {
  height: 300rpx;
  width: 100%;
}

.swiper .image {
  width: 100%;
  height: 100%;
}

.navContainer {
  display: flex;
  justify-content: space-around;
  font-size: 24rpx;
}

.navContainer .navItem {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: aliceblue;
  margin: 20rpx 0;
}

.recommend {
  padding: 20rpx;
  height: 250rpx;
}

.recommendScroll {
  display: flex;
  height: 200rpx;
}

.scrollItem {
  font-size: 25rpx;
  margin-right: 20rpx;
  /* height: 200rpx; */
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
}
.toopList{
  padding: 20rpx;
}
.toopList-tag{
  font-size: 25rpx;
  color: #666666;
}
.toopList-recommend .songs image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  float: left;
  margin-right: 30rpx;
}
.toopList-recommend .songs{
  height: 100rpx;
  line-height: 100rpx;
  margin: 20rpx 0;
}
.toopList-recommend .songs text{
  line-height: 100rpx;
  display: block;
  float: left;
  margin-right: 50rpx;
}
.swiper-songs{
  height: 420rpx;
}